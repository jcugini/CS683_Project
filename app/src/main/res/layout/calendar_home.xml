<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FF35393D">

    <!--Welcome text displaying on home page-->
    <TextView
        style="@style/AppText"
        android:text="@string/calendar_text"
        android:id="@+id/welcomeText"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout3">

        <!--Button to add a calendar event. This button pulls up the build in calendar add event
        screen-->
        <Button
            style="@style/AppText"
            android:background="@drawable/buttonshape"
            android:text="@string/add_calendar_event"
            android:textAllCaps="false"
            android:id="@+id/add_event_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp">

        <!--Button to view the built in google calendar. This button pulls up the calendars already
        on the phone.-->
        <Button
            style="@style/AppText"
            android:background="@drawable/buttonshape"
            android:text="@string/calendar_view_button"
            android:textAllCaps="false"
            android:id="@+id/view_calendar_button"
            android:layout_marginBottom="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>